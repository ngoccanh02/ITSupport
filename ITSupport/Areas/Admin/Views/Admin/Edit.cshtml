@model ITSupport.Models.Admin

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2> ĐIỀU CHỈNH THÔNG TIN ADMIN</h2>
@*Thêm thuộc tính cho form để upload ảnh *@
@using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{@Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">
            Mã Admin:
        </label>
        <div class="col-md-10">
            @*Chỉ hiển thị mã sách không cho sửa*@
            <input type="text" size="70" name="iMaAdmin" value="@Model.IDAdmin" readonly />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">
            Họ và tên:
        </label>
        <div class="col-md-10">
            <input type="text" size="70" name="sName" value="@Model.Name" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">
            Email:
        </label>
        <div class="col-md-10">
            <input type="text" size="70" name="sEmail" value="@Model.Email" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">
            Password:
        </label>
        <div class="col-md-10">
            <input type="text" size="70" name="spass" value="@Model.Name" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">
            Ảnh đại diện:
        </label>
        <div class="col-md-10">
            <input type="file" name="fFileUpload" />
            <img src="~/Asset/Images/Admin/@Model.Images" width="120">
            (Ảnh hiện tại)
        </div>
    </div>
    <div class="form-group">

        <label class="control-label col-md-2">
            Ngày sửa đổi:
        </label>
        <div class="col-md-10">
            <input type="date" name="dNgaySuaDoi" required />
        </div>
    </div> <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="LƯU THÔNG TIN" class="btn btn-success" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ Admin", "Index")
</div>