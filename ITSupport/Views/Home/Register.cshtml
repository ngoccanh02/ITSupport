
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Asset/Login/style.css" rel="stylesheet" />
    <title>IT Support - Register</title>
</head>
<body>
    <form action="Register" method="post">
        <div class="login">
            <div class="title">Hey, Newcomer!</div>
            <div class="des">
                Welcome to our website <br> where new beginnings await!
            </div>
            <div class="group">
                <input type="text" placeholder="Enter Name" name="Name">
                <td>@ViewData["err1"]</td>
            </div>
            <div class="group">
                <input type="text" placeholder="Enter Email" name="Email">
                <td>@ViewData["err5"]</td>
            </div>
            <div class="group">
                <input type="text" placeholder="Enter Username" minlength="4" name="UserName">
                <td>@ViewData["err2"]</td>
            </div>
            <div class="group">
                <input type="password" id="inputPassword" placeholder="Password" minlength="4" name="Password">
                <td>@ViewData["err3"]</td>
                <span id="showPassword">
                    <ion-icon name="eye-outline"></ion-icon>
                    <ion-icon name="eye-off-outline"></ion-icon>
                </span>
            </div>
            <div class="recovery">
                <a href="@Url.Action("Forgotpassword","Home")">Recovery Password</a>
            </div>
            @ViewBag.Thongbao
            <div class="signIn" value="Register Account">
                <button>Sign Up</button>
            </div>
            <div class="or">
                Or continue with
            </div>
            <div class="list">
                <div class="item">
                    <img src="https://cdn1.iconfinder.com/data/icons/google-s-logo/150/Google_Icons-09-512.png" alt="">
                </div>
                <div class="item">
                    <img src="https://museumandgallery.org/wp-content/uploads/2020/03/Facebook-Icon-Facebook-Logo-Social-Media-Fb-Logo-Facebook-Logo-PNG-and-Vector-with-Transparent-Background-for-Free-Download.png" alt="">
                </div>
                <div class="item">
                    <img src="https://www.iconpacks.net/icons/2/free-twitter-logo-icon-2429-thumb.png" alt="">
                </div>
            </div>
            <div class="register">
                You are already a member? <a href="@Url.Action("Login","Home")">Login now</a>
            </div>

        </div>
    </form>
    <script src="~/Asset/Login/app.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>