
@{
    Layout = null;
};

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ITSupport - Register</title>

    <!-- Custom fonts for this template-->
    <link href="/Asset/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/Asset/Admin/css/Syte.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/Asset/Admin/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0 align-self-lg-center">
                <!-- Nested Row within Card Body -->
                <div class="row">

                    <div class="col-xl">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user">
                                <div class="form-group">

                                    <input type="text" class="form-control form-control-user" id="exampleInputEmail"
                                           placeholder="Name" name="Name">
                                    <td>
                                        @ViewData["err1"]
                                    </td>

                                </div>
                                <div class="form-group">

                                    <input type="text" class="form-control form-control-user" id="exampleInputEmail"
                                           placeholder="Address" name="Address">


                                </div>
                                <div class="form-group">
                                    <input type="number" class="form-control form-control-user" id="exampleInputPhonenumber"
                                           placeholder="Phone number" name="Phone">
                                    <td>
                                        @ViewData["err6"]
                                    </td>

                                </div>
                                <div class="form-group">

                                    <input type="email" class="form-control form-control-user" id="exampleInputEmail"
                                           placeholder="Email Address" name="Email">
                                    <label data-empty="Please Enter This Field!"
                                           data-invalid="Invalid Email Format!"
                                           data-valid="Valid Email!"></label>
                                    <td>
                                        @ViewData["err5"]
                                    </td>

                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" id="exampleInputAccount"
                                           placeholder="Account" minlength="6" name="UserName">
                                    <label data-empty="Please Enter This Field!"
                                           data-invalid="Account minimum 6 characters!"
                                           data-valid="Valid Account"></label>
                                    <td>
                                        @ViewData["err2"]

                                    </td>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user"
                                               id="exampleInputPassword" placeholder="Password" minlength="8" name="Password">
                                        <label data-empty="Please Enter This Field!"
                                               data-invalid="Password minimum 8 characters!"
                                               data-valid="Valid Password"></label>
                                        <td>
                                            @ViewData["err3"]
                                        </td>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user"
                                               id="exampleRepeatPassword" placeholder="Repeat Password" name="Password" />
                                        <td>
                                            @ViewData["err4"]
                                        </td>
                                    </div>
                                </div>
                                @ViewBag.ThongBao
                                <div>
                                    <input type="submit" class="btn btn-primary btn-user btn-block"
                                           id="exampleRegister" placeholder="Register Account" value="Register Account" />
                                </div>
                                @*<a href="index.html" class="btn btn-primary btn-user btn-block">
                                        Register Account
                                    </a>*@
                                <hr>
                                <a href="index.html" class="btn btn-google btn-user btn-block">
                                    <i class="fab fa-google fa-fw"></i> Register with Google
                                </a>
                                <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                    <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
                                </a>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                                <ul class="small">
                                    @Html.ActionLink("Already have an account? Login!", "Login", "User")
                                </ul>
                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/Asset/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="/Asset/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/Asset/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/Asset/Admin/js/sb-admin-2.min.js"></script>

</body>

</html>