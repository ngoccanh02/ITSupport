@model ITSupport.Models.Course
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM KHÓA HỌC MỚI</h2>

@*Thêm thuộc tính cho form để upload ảnh *@
@using (Html.BeginForm("Create", "Course", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">
                Tên Khóa Học:
            </label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenSach" value="@ViewBag.TenSach" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                Mô tả:
            </label>
            <div class="col-md-10">
                <textarea name="sMoTa">
                        @ViewBag.MoTa
                </textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                Ảnh bìa:
            </label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload" />
                @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
                @ViewBag.ThongBao
            </div>
        </div>
        <div class="form-group">

            <label class="control-label col-md-2">
                Ngày cập nhật:
            </label>
            <div class="col-md-10">
                <input type="date" name="dNgayCapNhat" required />
            </div>
        </div>
        <div class="form-group">

            <label class="control-label col-md-2">
                Giá Khóa Học:
            </label>
            <div class="col-md-10">
                <input type="number" min="1" required name="mGiaBan" value="@ViewBag.GiaBan" />
            </div>
        </div>
        <div class="form-group">

            <label class="control-label col-md-2">
                Người Tạo:
            </label>
            <div class="col-md-10">
                @*Hiển thị ViewBag.MaCD vào dropdownlist*@
                @Html.DropDownList("IDCreator")
            </div>
        </div>
        <div class="form-group">

            <label class="control-label col-md-2">
                Khóa Học:
            </label>
            <div class="col-md-10">
                @*Hiển thị ViewBag.MaCD vào dropdownlist*@
                @Html.DropDownList("IDTopic")
            </div>
        </div>
        <div class="form-group">

            <label class="control-label col-md-2">
                Nhà Hợp Tác:
            </label>
            <div class="col-md-10">
                @Html.DropDownList("IDPH")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-secondary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ SÁCH", "Index")
</div>
